# =================================
# App Settings
# =================================
APP_NAME="Auction Admin API"
APP_VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# =================================
# Database
# =================================
DATABASE_URL=sqlite:///./auction.db
# PostgreSQL 사용 시
# DATABASE_URL=postgresql://user:password@localhost:5432/auction

# =================================
# JWT 설정 (반드시 변경하세요!)
# =================================
# 관리자용 시크릿 키 (32자 이상 권장)
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
# 일반 사용자용 시크릿 키 (32자 이상 권장)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ALGORITHM=HS256
# Access Token 만료 시간 (분) - 보안을 위해 30분 권장
ACCESS_TOKEN_EXPIRE_MINUTES=30
# Refresh Token 만료 시간 (일)
REFRESH_TOKEN_EXPIRE_DAYS=7

# =================================
# 토큰 블랙리스트 설정
# =================================
# 저장소 선택: "db" (PostgreSQL) 또는 "redis"
TOKEN_BLACKLIST_BACKEND=db
# Redis 사용 시 URL (TOKEN_BLACKLIST_BACKEND=redis일 때만 필요)
REDIS_URL=redis://localhost:6379/0

# =================================
# CORS
# =================================
FRONTEND_URL=http://localhost:3001

# =================================
# OAuth Providers
# =================================
KAKAO_CLIENT_ID=your_kakao_rest_api_key
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_REDIRECT_URI=http://localhost:8000/api/auth/kakao/callback

NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
NAVER_REDIRECT_URI=http://localhost:8000/api/auth/naver/callback

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# =================================
# N8N Webhook (선택)
# =================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/oauth-callback

# =================================
# AI API Keys (선택)
# =================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# =================================
# 본인인증 설정
# =================================
# CI 인증 필수 여부
REQUIRE_CI_VERIFICATION=true

# 전화번호 인증 사용 여부 (옵션, CI와 별도)
ENABLE_PHONE_VERIFICATION=false
REQUIRE_PHONE_VERIFICATION=false

# 본인인증 서비스 (pass, kakao, nice)
IDENTITY_PROVIDER=pass
IDENTITY_API_KEY=your_identity_api_key
IDENTITY_API_SECRET=your_identity_api_secret

# =================================
# 보안 설정 (반드시 변경하세요!)
# =================================
# 암호화 키 (32자 이상 랜덤 문자열)
ENCRYPTION_KEY=change-this-to-random-32-char-string
ENCRYPTION_SALT=auction_enc_salt_v1

# 해시 솔트 (유출되면 안 됨)
PHONE_HASH_SALT=change_this_phone_salt
CI_HASH_SALT=change_this_ci_salt

# 디바이스 핑거프린트 추적
ENABLE_DEVICE_FINGERPRINT=true

# 의심 활동 자동 감지
ENABLE_SUSPICIOUS_DETECTION=true

# 같은 디바이스에서 허용되는 최대 계정 수
MAX_ACCOUNTS_PER_DEVICE=1

# 고액 거래 추가 인증 기준 (원)
HIGH_VALUE_THRESHOLD=500000
